                                android:id="@+id/type_more"
                                style="@style/radio_style"
                                android:button="@drawable/radio_more"
                                android:text="更多" />
                        </RadioGroup>-->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="680px"
        android:layout_height="90px"
        android:layout_marginBottom="50px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.ik.moojing.widget.HorizontalListView
            android:id="@+id/hori_listview"
            android:layout_width="660px"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/more_apps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:src="@mipmap/icon_more_apps" />
    </LinearLayout>
</LinearLayout>